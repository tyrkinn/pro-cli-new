<div class="column is-3 project">
    <div class="card">
    <header class="card-header">
        <p class="card-header-title">
            {{project.name}}
        </p>
        <button class="card-header-icon" aria-label="more options">
        <span>
          {{project.project_path.label}}
        </span>
        </button>
    </header>
    <div class="card-content">
        <div class="content">
          No description provided
        <br>
        </div>
    </div>
    <footer class="card-footer">
        <button class="card-footer-item button is-ghost" hx-swap="none" hx-get="/open?project={{project.name}}">Open</a>
        <button class="card-footer-item button is-ghost">Edit</a>
        <button class="card-footer-item button is-ghost" hx-target="closest .project" hx-swap="delete" hx-delete="/delete?project={{project.name}}" hx-confirm="Are you sure you want to delete `{{project.name}}` project">Delete</a>
    </footer>
    </div>
</div>
